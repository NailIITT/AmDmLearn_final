<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main4Activity"
    android:background="@mipmap/fon_foreground"
    >


    <Button
        android:id="@+id/start"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"

        android:layout_marginLeft="205dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_costum"
        android:onClick="toDo"
        android:text="Начать" />

    <ImageButton
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_costum2" />

    <Button
        android:id="@+id/am"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginTop="700dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_costum2"
        android:text="am" />

    <Button
        android:id="@+id/dm"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_below="@+id/am"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_costum2"
        android:text="dm" />

    <Button
        android:id="@+id/em"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_above="@+id/dm"
        android:layout_marginLeft="125dp"
        android:layout_toRightOf="@+id/am"
        android:background="@drawable/button_costum2"
        android:onClick="toEm"
        android:text="em" />

    <Button
        android:id="@+id/c"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_below="@+id/em"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="53dp"
        android:layout_toRightOf="@+id/dm"
        android:background="@drawable/button_costum2"
        android:text="c" />

    <Button
        android:id="@+id/e"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_above="@+id/c"
        android:layout_marginLeft="125dp"
        android:layout_toRightOf="@+id/em"
        android:background="@drawable/button_costum2"
        android:text="e" />

    <Button
        android:id="@+id/a"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_below="@+id/e"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="55dp"
        android:layout_toRightOf="@+id/c"
        android:background="@drawable/button_costum2"
        android:text="a" />

    <Button
        android:id="@+id/d"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_below="@+id/e"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="52dp"
        android:layout_toRightOf="@+id/a"
        android:background="@drawable/button_costum2"
        android:text="d" />

    <Button
        android:id="@+id/g"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_above="@+id/d"
        android:layout_marginLeft="125dp"
        android:layout_toRightOf="@+id/e"
        android:background="@drawable/button_costum2"
        android:text="g" />


</RelativeLayout>